{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./dist/",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "importHelpers": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "jest"
    ],
  },
  "exclude": [
    "node_modules"
  ]
}
